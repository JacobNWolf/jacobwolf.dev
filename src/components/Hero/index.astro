---
import { Icon } from 'astro-icon/components';

import Terminal from '~/components/Terminal/index.astro';
import Typography from '~/components/Typography';
import { Button } from '~/components/Button';

const socialLinks = [
  {
    name: 'GitHub',
    icon: 'ri:github-line',
    href: 'https://github.com/JacobNWolf',
    ariaLabel: 'GitHub',
  },
  {
    name: 'LinkedIn',
    icon: 'ri:linkedin-fill',
    href: 'https://linkedin.com/in/jacobnwolf',
    ariaLabel: 'LinkedIn',
  },
  {
    name: 'Twitter',
    icon: 'ri:twitter-x-line',
    href: 'https://twitter.com/JacobWolf',
    ariaLabel: 'Twitter',
  },
];
---

<section class="min-h-screen flex items-center justify-center px-4 py-20">
  <div class="container max-w-screen-xl">
    <div class="flex flex-col items-center gap-8 text-center">
      <div class="flex flex-col gap-4">
        <Typography
          as="h1"
          token="font-bold/text/7xl"
          color="primary"
          colorWeight={800}
          darkColor="secondary"
          darkColorWeight={100}
          className="text-balance"
        >
          Hi, I'm{' '}
          <Typography
            as="span"
            token="font-bold/text/7xl"
            color="teal"
            colorWeight={600}
            darkColor="teal"
            darkColorWeight={500}
            className="inline"
          >
            Jacob Wolf
          </Typography>
        </Typography>

        <div class="flex flex-col md:flex-row items-center justify-center gap-4">
          <Typography
            as="span"
            token="font-bold/text/4xl"
            color="primary"
            colorWeight={800}
            darkColor="secondary"
            darkColorWeight={100}
          >
            I build
          </Typography>
          <div class="flex justify-center w-full md:w-auto">
            <Terminal />
          </div>
        </div>
      </div>
      
      <Typography
          as="p"
          token="font-normal/text/lg"
          color="primary"
          colorWeight={700}
          darkColor="secondary"
          darkColorWeight={200}
          className="max-w-2xl mx-auto text-balance"
        >
          I'm an award-winning journalist turned software engineer specializing in building modern, performant web applications. 
          <br />
          <br />
          Currently, I'm focused on building the next generation suite of media tools at{' '}
            <a href="https://www.beehiiv.com" target="_blank" rel="noopener" class="text-accent-600 dark:text-accent-500 font-medium">beehiiv</a>.
      </Typography>

      <div class="flex flex-row items-center gap-4">
        <Button variant="primary" href="#projects">
          View My Work
        </Button>
        <Button variant="outline" href="#contact">
          Get In Touch
        </Button>
      </div>

      <div class="flex flex-row items-center gap-4">
        {socialLinks.map((social) => (
          <Button 
            variant="flush" 
            size="icon" 
            href={social.href} 
            target="_blank" 
            rel="noopener" 
            aria-label={social.ariaLabel}
          >
            <Icon name={social.icon} class="w-6 h-6" />
          </Button>
        ))}
      </div>

      <div class="absolute bottom-8 animate-bounce">
        <Icon name="ri:arrow-down-line" class="w-6 h-6 text-primary-800 dark:text-secondary-200" />
      </div>
    </div>
  </div>
</section>