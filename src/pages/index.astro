---
import { Typewriter } from '~/components/Typewriter';
import Layout from '~/layouts/Layout.astro';

const typewriterTexts = ['React apps', 'Ruby on Rails apps', 'Node.js apps', 'WordPress sites', 'Native integrations'];
---

<Layout>
	<Typewriter 
		texts={typewriterTexts}
		speed={60}
		deleteSpeed={30}
		speedVariant={0.3}
		randomizeDeleteSpeed
		pauseBeforeDelete={900}
		pauseBeforeType={420}
		loop
		className="text-4xl font-semibold"
		client:only="react"
	/>
</Layout>
